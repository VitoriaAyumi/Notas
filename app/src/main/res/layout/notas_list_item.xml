<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.Material3.CardView.Elevated"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="4sp"
    android:layout_marginTop="2sp"
    android:layout_marginEnd="4sp"
    android:layout_marginBottom="2sp"
    app:cardCornerRadius="15dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/blue_clearer"
        android:padding="10dp">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/blue_clearer"
        android:clickable="false"
        android:focusable="false">

        <TextView
            android:id="@+id/list_item_materia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blue_2"
            android:textSize="20dp"
            android:ellipsize="end"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/list_item_cred"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_item_materia"
            android:textSize="15dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/list_item_trab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_item_cred"
            android:textSize="15dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/list_item_lista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_item_trab"
            android:textSize="15dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/list_item_pro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_item_lista"
            android:textSize="15dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/list_item_pre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_item_pro"
            android:textSize="15dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/black"/>

    </RelativeLayout>

        <ImageView
            android:id="@+id/image_remover"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_delete" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>